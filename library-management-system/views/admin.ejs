<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - OldTown Library</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            margin-bottom: 1.5rem;
        }
        .card-header {
            background-color: #fff;
            border-bottom: 1px solid rgba(0,0,0,.125);
            font-weight: 600;
        }
        .navbar-brand {
            font-family: 'Georgia', serif;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/landing">OldTown Library Admin</a>
            <div class="d-flex gap-2">
                <form action="/admin/toggle-maintenance" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm <%= locals.maintenanceMode ? 'btn-warning' : 'btn-outline-light' %>">
                        <%= locals.maintenanceMode ? 'Disable Maintenance' : 'Enable Maintenance' %>
                    </button>
                </form>
                <a href="/landing" class="btn btn-sm btn-primary">Back to Home</a>
            </div>
        </div>
    </nav>

    <div class="container pb-5">
        <!-- Analytics Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0 text-secondary">Library Analytics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-4">
                                <h6 class="text-center text-muted mb-3">Most Borrowed Books</h6>
                                <canvas id="booksChart"></canvas>
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-center text-muted mb-3">Fines Collected Over Time</h6>
                                <canvas id="finesChart"></canvas>
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-center text-muted mb-3">Book Status</h6>
                                <div style="max-width: 250px; margin: 0 auto;">
                                    <canvas id="statusChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row g-4">
            <!-- User Management -->
            <div class="col-lg-8">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-secondary">User Management</h5>
                        <span class="badge bg-secondary"><%= users.length %> Users</span>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Username</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Attempts</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(user => { %>
                                    <tr>
                                        <td class="fw-bold"><%= user.username %></td>
                                        <td><span class="badge bg-light text-dark border"><%= user.role %></span></td>
                                        <td>
                                            <% if (user.lockUntil && user.lockUntil > Date.now()) { %>
                                                <span class="badge bg-danger">Locked</span>
                                            <% } else { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } %>
                                        </td>
                                        <td><%= user.failedLoginAttempts %></td>
                                        <td>
                                            <form action="/admin/delete-user" method="POST" onsubmit="return confirm('Are you sure you want to delete user <%= user.username %>?');" class="d-flex gap-2">
                                                <input type="hidden" name="username" value="<%= user.username %>">
                                                <input type="password" name="libPassword" placeholder="Lib Pass" required class="form-control form-control-sm" style="width: 100px;">
                                                <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Top Borrowers -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0 text-secondary">Top 5 Borrowers</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <% if (locals.topBorrowers && topBorrowers.length > 0) { %>
                            <% topBorrowers.forEach((borrower, index) => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><%= index + 1 %>. <%= borrower.name %></span>
                                    <span class="badge bg-primary rounded-pill"><%= borrower.count %></span>
                                </li>
                            <% }) %>
                        <% } else { %>
                            <li class="list-group-item text-center text-muted">No data available</li>
                        <% } %>
                    </ul>
                </div>

                <!-- System Reset -->
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Danger Zone</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text small text-muted">This action will delete all borrowing history and fines for all users. Book inventory will remain unchanged.</p>
                        <form action="/admin/reset-history" method="POST" onsubmit="return confirm('Are you sure you want to delete ALL user history? This cannot be undone.');">
                            <div class="mb-2">
                                <input type="password" name="libPassword" placeholder="Librarian Password" required class="form-control">
                            </div>
                            <button type="submit" class="btn btn-danger w-100">Reset System History</button>
                        </form>
                        <hr>
                        <form action="/admin/delete-all-books" method="POST" onsubmit="return confirm('Are you sure you want to delete ALL books? This cannot be undone.');">
                            <button type="submit" class="btn btn-outline-danger w-100">Delete All Books</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Hidden data container to pass server data to JS without syntax errors -->
    <div id="chart-data" 
        data-most-borrowed="<%= JSON.stringify(mostBorrowedBooks || []) %>"
        data-fines="<%= JSON.stringify(finesData || []) %>"
        data-book-status="<%= JSON.stringify(bookStatus || {issued: 0, available: 0}) %>"
        style="display: none;">
    </div>

    <script>
        // Read data from the hidden element
        const chartContainer = document.getElementById('chart-data');
        const mostBorrowedData = JSON.parse(chartContainer.dataset.mostBorrowed);
        const finesData = JSON.parse(chartContainer.dataset.fines);
        const bookStatus = JSON.parse(chartContainer.dataset.bookStatus);

        // 1. Most Borrowed Books (Bar Chart)
        new Chart(document.getElementById('booksChart'), {
            type: 'bar',
            data: {
                labels: mostBorrowedData.map(d => d.name),
                datasets: [{
                    label: 'Times Borrowed',
                    data: mostBorrowedData.map(d => d.count),
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                plugins: { title: { display: true, text: 'Most Borrowed Books' } }
            }
        });

        // 2. Fines Collected Over Time (Line Chart)
        new Chart(document.getElementById('finesChart'), {
            type: 'line',
            data: {
                labels: finesData.map(d => d.date),
                datasets: [{
                    label: 'Fines Collected ($)',
                    data: finesData.map(d => d.amount),
                    borderColor: 'rgba(255, 99, 132, 1)',
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    fill: true
                }]
            },
            options: {
                plugins: { title: { display: true, text: 'Fines Collected Over Time' } }
            }
        });

        // 3. Books Status (Pie Chart)
        new Chart(document.getElementById('statusChart'), {
            type: 'pie',
            data: {
                labels: ['Issued', 'Available'],
                datasets: [{
                    data: [bookStatus.issued, bookStatus.available],
                    backgroundColor: ['#ffcd56', '#4bc0c0']
                }]
            },
            options: {
                plugins: { title: { display: true, text: 'Book Status (Issued vs Available)' } }
            }
        });
    </script>
</body>
</html>